<h1>Add a New User</h1>

<%= form_for @user do |f| %>
   <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
   </p>
   <p>
      <%= f.label :password %><br />
      <%= f.text_field :password %>
   </p>
   <p>
      <%= f.label :profile %><br />
      <%= f.text_area :profile %>
   </p>
   <p>
      <%= f.submit "Submit" %>
   </p>

<% end %>
